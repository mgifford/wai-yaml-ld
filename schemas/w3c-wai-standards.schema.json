{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/w3c-wai-standards.schema.json",
  "title": "W3C WAI Standards Index",
  "type": "object",
  "required": [
    "project",
    "owner",
    "updated",
    "sources",
    "primary_wcag_version",
    "wcag_version_policy"
  ],
  "properties": {
    "project": {"type": "string", "minLength": 1},
    "owner": {"type": "string", "minLength": 1},
    "updated": {"type": "string", "minLength": 1},
    "primary_wcag_version": {"type": "string", "minLength": 1},
    "wcag_version_policy": {"type": "string", "minLength": 1},
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "url", "type", "format_hint"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "name": {"type": "string", "minLength": 1},
          "url": {"type": "string", "minLength": 1},
          "type": {"type": "string", "minLength": 1},
          "format_hint": {"type": "string", "minLength": 1}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
